<button class="btn btn-default home">HOME</button>

<h1>Saved Science News Articles</h1>
<hr>

<div class="articles">
    {{#each articles}}
        {{#if saved}}
        <div class="article">
            <img src="{{image}}" style="height:100px;">
            <a href="{{link}}"><h2>{{title}}</h2></a>
            <p>{{summary}}</p>
            <button class="btn btn-primary unsave" data-id="{{_id}}">UNSAVE</button>
            <button class="btn btn-primary checknotes" data-id="{{_id}}">NOTE</button>
            <br>
            <hr class="hrArticle">
        </div>
        {{/if}}
    {{/each}}
</div>